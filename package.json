  "version": "0.0.0",
  "packageManager": "pnpm@8.15.6",
  "description": "",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.mjs"
    },
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core/index.mjs"
      }
    },
    "./rules": {
      "import": {
        "types": "./dist/rules/index.d.ts",
        "default": "./dist/rules/index.mjs"
      }
    },
    "./cli": {
      "import": {
        "types": "./dist/cli/index.d.ts",
        "default": "./dist/cli/index.mjs"
      }
    },
    "./linter": {
      "import": {
        "types": "./dist/linter/index.d.ts",
        "default": "./dist/linter/index.mjs"
      }
    },
    "./meta": {
      "import": {
        "types": "./dist/meta/index.d.ts",
        "default": "./dist/meta/index.mjs"
      }
    },
    "./kit": {
      "import": {
        "types": "./dist/kit/index.d.ts",
        "default": "./dist/kit/index.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/core/index.mjs",
  "types": "./dist/core/index.d.ts",
  "bin": {
    "evolution-design": "./dist/cli/index.mjs",
    "evo": "./dist/cli/index.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 20",
    "pnpm": ">= 8",
    "yarn": "Please use pnpm instead of yarn to install dependencies",
    "npm": "Please use pnpm instead of npm to install dependencies"
  },
  "scripts": {
    "build": "unbuild && publint --strict",
    "build:stub": "unbuild --stub",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "pnpm run test && bumpp -r && pnpm publish",
    "prepare": "simple-git-hooks",
    "test": "pnpm run /^test:/",
    "test:package": "publint",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest --run",
    "vitest": "vitest",
    "evo": "tsx ./src/cli/index.ts"
  },
  "dependencies": {
    "c12": "^1.11.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "chokidar-cli": "^3.0.0",
    "citty": "^0.1.6",
    "consola": "^3.2.3",
    "cosmiconfig": "^9.0.0",
    "figures": "^6.1.0",
    "globby": "^14.0.2",
    "immer": "^10.1.1",
    "install": "^0.13.0",
    "minimatch": "^10.0.1",
    "npm": "^10.8.3",
    "precinct": "^12.1.2",
    "prexit": "^2.3.0",
    "rxjs": "^7.8.1",
    "terminal-link": "^3.0.0",
    "tsconfck": "^3.1.3",
    "typescript": "5.6.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.3.2",
    "@types/node": "^22.5.4",
    "bumpp": "^9.4.0",
    "eslint": "^9.10.0",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.9.0",
    "publint": "^0.2.10",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.0",
    "unbuild": "2.0.0",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
